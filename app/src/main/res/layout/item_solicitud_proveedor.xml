<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    card_view:cardElevation="6dp"
    card_view:cardCornerRadius="14dp"
    card_view:cardBackgroundColor="#222437"
    android:padding="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="18dp">

        <TextView
            android:id="@+id/tv_nombre_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marco Rioja"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:letterSpacing="0.02"
            android:paddingBottom="2dp" />

        <TextView
            android:id="@+id/tv_correo_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="marco@gmail.com"
            android:textSize="15sp"
            android:textColor="#B0B0B0"
            android:paddingBottom="2dp" />

        <TextView
            android:id="@+id/tv_fecha_solicitud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Solicitado: 28/05/2025"
            android:textSize="13sp"
            android:textColor="#77C5F8"
            android:paddingBottom="8dp"
            android:paddingTop="2dp"
            android:fontFamily="sans-serif-medium"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">
        <Button
            android:id="@+id/btn_rechazar"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:backgroundTint="#EF305C"
            android:elevation="3dp"
            android:layout_marginRight="20dp"
            android:fontFamily="sans-serif-medium"
            android:foreground="?attr/selectableItemBackground"
            android:text="Rechazar"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_aprobar"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:text="Aprobar"
            android:backgroundTint="#5545E0"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:foreground="?attr/selectableItemBackground"
            android:fontFamily="sans-serif-medium"
            android:elevation="3dp"/>
    </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
