<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">



        <!-- Foto de perfil -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgFotoPerfil"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo_manga"
            android:layout_marginTop="24dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/CircleImage" />

        <!-- Nombre -->
        <TextView
            android:id="@+id/txtNombreUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mangas y Comics"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp" />

        <!-- Email -->
        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="comics@gmail.com"
            android:textColor="#BBBBBB"
            android:textSize="14sp"
            android:layout_gravity="center_horizontal" />



        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#333333"
            android:layout_marginVertical="24dp" />

        <!-- Opci贸n: Convertirse en proveedor -->
        <LinearLayout
            android:id="@+id/btnConvertirseProveedor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ico_briefcase"
                android:tint="#FFFFFF" />

            <TextView
                android:id="@+id/txtConvertirseProveedor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Convertirse en proveedor"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <!-- Opci贸n: Cerrar sesi贸n -->
        <LinearLayout
            android:id="@+id/btnCerrarSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ico_logout"
                android:tint="#FF5252" />

            <TextView
                android:id="@+id/txtCerrarSesion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cerrar sesi贸n"
                android:textColor="#FF5252"
                android:textSize="16sp"
                android:layout_marginStart="12dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
