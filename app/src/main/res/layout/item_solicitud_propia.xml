<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp"
    card_view:cardBackgroundColor="#222437">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvTituloSolicitud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vol. 1 âˆ’ Eclipse"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tvTipoSolicitud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo: Manga"
            android:textColor="#B0B0B0"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvFechaSolicitud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enviada: 09/06/2025"
            android:textColor="#77C5F8"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tvEstadoSolicitud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado: Pendiente"
            android:textColor="#FFAB40"
            android:textStyle="bold"
            android:textSize="14sp"
            android:paddingTop="6dp"/>

        <ImageView
            android:id="@+id/ivEliminarSolicitud"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_close_white"
            android:contentDescription="Eliminar"
            android:tint="@android:color/white"
            android:background="@drawable/bg_chip"
            android:padding="6dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
