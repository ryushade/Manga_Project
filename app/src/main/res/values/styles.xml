<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Manga_Project" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorDefault</item>
    </style>

    <style name="Widget.Manga_Project.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/backgroundGeneral</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="Widget.Manga_Project.CoordinatorLayout" parent="android:Widget">
        <item name="android:background">@color/backgroundGeneral</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="CircleImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="Widget.Manga_Project.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.Manga_Project.TextInputLayout.HintText</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="hintTextColor">@color/colorPrimary</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="boxStrokeColor">@color/textInputOutlineColor</item>
    </style>

    <style name="TextAppearance.Manga_Project.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="nameBook">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor" >@color/colorText</item>
        <!--<item name="android:fontFamily" >@font/sourcesans3_medium</item>-->
    </style>

    <style name="nameBookDescription" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/sourcesans3_medium</item> <!-- Opcional -->
    </style>

    <style name="authorBookDescription">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor" >@color/colorText</item>
    </style>

    <style name="descriptionBook">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">#000000</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxBackgroundMode">outline</item>
    </style>


</resources>